{
  "name": "pup-pals-backend",
  "version": "1.0.0",
  "description": "Backend per applicazione social network per cani",
  "main": "functions/index.js",
  "scripts": {
    "start": "firebase emulators:start --only functions",
    "dev": "nodemon functions/server.js",
    "debug": "node --inspect functions/server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "lint": "eslint .",
    "firebase:init": "firebase init functions",
    "firebase:deploy": "firebase deploy --only functions",
    "firebase:shell": "firebase functions:shell",
    "firebase:logs": "firebase functions:log"
  },
  "keywords": [
    "social-network",
    "dogs",
    "express",
    "mongodb",
    "firebase",
    "multer",
    "gridfs"
  ],
  "author": "Il Tuo Nome",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bson": "^6.2.0",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.2.0",
    "gridfs-stream": "^1.1.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "multer": "1.4.5-lts.1",
    "multer-gridfs-storage": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.11",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^13.1.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": "22"
  },
  "nodemonConfig": {
    "watch": [
      "functions/server.js",
      "functions/routes/",
      "functions/models/",
      "functions/config/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "*.test.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn"
    }
  }
}